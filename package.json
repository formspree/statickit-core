{
  "name": "@statickit/core",
  "version": "2.5.1",
  "description": "The core library for StaticKit",
  "homepage": "https://statickit.com",
  "bugs": {
    "url": "https://github.com/unstacked/statickit-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unstacked/statickit-core.git"
  },
  "license": "MIT",
  "author": "Derrick Reimer",
  "files": [
    "dist/**/*.{js,ts}",
    "forms.d.ts",
    "functions.d.ts"
  ],
  "main": "dist/statickit.cjs.js",
  "module": "dist/statickit.esm.js",
  "types": "dist/types/src/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && npm run build:types && npm run build:js",
    "build:js": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "format": "npx prettier --write 'src/**/*.{js,ts}'",
    "prepare": "npm run build",
    "release": "np",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": [
      "npx prettier --write",
      "git add"
    ],
    "package.json": [
      "npx sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "@types/promise-polyfill": "^6.0.3",
    "fetch-ponyfill": "^6.1.0",
    "promise-polyfill": "^8.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "np": "^5.2.1",
    "prettier": "^1.19.1",
    "rollup": "^1.28.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "sort-package-json": "^1.36.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "np": {
    "yarn": false
  }
}
